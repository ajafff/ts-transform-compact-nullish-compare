{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["ES2018"],
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "skipLibCheck": false
    },
    "include": [
        "src"
    ]
}
